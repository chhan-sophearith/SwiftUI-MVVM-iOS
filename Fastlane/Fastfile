fastlane_version '2.221.1'
default_platform :ios

platform :ios do

  lane :unit_test do
    scan(
      workspace: "Sample-MVVM-Swift.xcodeproj/project.xcworkspace",
      scheme: "Sample-MVVM-Swift",
      derived_data_path: "./build",
      code_coverage: true
    )
  end
  
  lane :build_ipa do
    gym(
      workspace: "Sample-MVVM-Swift.xcodeproj/project.xcworkspace",
      scheme: "Sample-MVVM-Swift",
      export_method: "ad-hoc",
      allowProvisioningUpdates: true
    )
  end
  

end

